package net.ccbluex.liquidbounce.features.module.modules.addit

import net.ccbluex.liquidbounce.event.EventTarget
import net.ccbluex.liquidbounce.event.Render3DEvent
import net.ccbluex.liquidbounce.features.module.Module
import net.ccbluex.liquidbounce.features.module.ModuleCategory
import net.ccbluex.liquidbounce.features.module.ModuleInfo
import net.ccbluex.liquidbounce.utils.render.SkidMode.*
import net.minecraft.entity.passive.EntityVillager
import java.awt.Color

@ModuleInfo(name = "VillagerESP", category = ModuleCategory.ADDIT)
class VillagerESP : Module() {

    @EventTarget
    fun onRender3D(event : Render3DEvent) {
        mc.theWorld.loadedEntityList.filterIsInstance<EntityVillager>().forEach { RenderUF.drawEntityBox(it, Color.WHITE, true) }
    }
}
